# FILE: Dockerfile.prod (para produção)
FROM node:20-alpine AS base

RUN apk add --no-cache libc6-compat sqlite
WORKDIR /app

# Dependencies
FROM base AS deps
COPY package*.json ./
RUN npm ci --only=production

# Builder
FROM base AS builder
COPY package*.json ./
RUN npm ci
COPY . .
RUN mkdir -p .wrangler/state/v3/d1/miniflare-D1DatabaseObject
RUN npm install -g wrangler
RUN wrangler d1 execute chopp_db --local --file=schema.sql || true
RUN npm run build

# Runner
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 astro

COPY --from=deps --chown=astro:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=astro:nodejs /app/dist ./dist
COPY --from=builder --chown=astro:nodejs /app/.wrangler ./.wrangler
COPY --chown=astro:nodejs package*.json ./

USER astro

EXPOSE 4321

ENV HOST=0.0.0.0
ENV PORT=4321

CMD ["node", "./dist/server/entry.mjs"]