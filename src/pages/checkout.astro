---
// FILE: src/pages/checkout.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Checkout - Finalizar Pedido">
  <div class="checkout-page">
    <div class="checkout-background">
      <div class="bg-gradient"></div>
      <div class="bg-grid"></div>
    </div>
    
    <div class="container">
      <div class="checkout-header">
        <a href="/loja" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Voltar para a loja
        </a>
        <div class="header-content">
          <div class="header-badge">
            <span class="badge-dot"></span>
            Checkout Seguro
          </div>
          <h1>Finalizar Pedido</h1>
          <p class="header-subtitle">Complete seus dados para enviar o pedido</p>
        </div>
      </div>

      <div id="checkout-content" class="checkout-content"></div>
    </div>
  </div>
</Layout>

<style is:global>
  .checkout-page {
    min-height: 100vh;
    background: #0a0a0a;
    padding: 2rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .checkout-background {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 1200px;
    height: 600px;
    background: radial-gradient(circle at 50% 0%, rgba(255, 184, 0, 0.08) 0%, transparent 70%);
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    mask-image: linear-gradient(to bottom, transparent, black 20%, black 80%, transparent);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .checkout-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    margin-bottom: 2rem;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .back-link:hover {
    color: #FFB800;
    gap: 0.75rem;
  }

  .back-link svg {
    transition: transform 0.3s ease;
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  .header-content {
    text-align: center;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.2);
    border-radius: 2rem;
    color: #FFB800;
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #FFB800;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  .checkout-header h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .header-subtitle {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    margin: 0;
  }

  .checkout-content {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 1.5rem;
    padding: 2.5rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  }

  .checkout-step {
    margin-bottom: 3rem;
  }

  .checkout-step:last-child {
    margin-bottom: 0;
  }

  .checkout-step h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .step-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(255, 184, 0, 0.2), rgba(255, 184, 0, 0.1));
    border-radius: 0.75rem;
    font-size: 1.25rem;
  }

  .form-group {
    margin-bottom: 1.5rem !important;
  }

  .form-group label {
    display: block !important;
    margin-bottom: 0.75rem !important;
    font-weight: 600 !important;
    font-size: 0.9375rem !important;
    color: rgba(255, 255, 255, 0.9) !important;
  }

  .form-group input,
  .form-group textarea {
    width: 100% !important;
    padding: 1rem 1.25rem !important;
    background: rgba(255, 255, 255, 0.05) !important;
    border: 2px solid rgba(255, 255, 255, 0.15) !important;
    border-radius: 0.875rem !important;
    color: #fff !important;
    font-size: 1rem !important;
    font-family: inherit !important;
    transition: all 0.3s ease !important;
    box-sizing: border-box !important;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none !important;
    border-color: #FFB800 !important;
    background: rgba(255, 184, 0, 0.08) !important;
    box-shadow: 0 0 0 4px rgba(255, 184, 0, 0.15) !important;
  }

  .form-group input:hover,
  .form-group textarea:hover {
    border-color: rgba(255, 184, 0, 0.4) !important;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.4) !important;
  }

  .form-group textarea {
    resize: vertical !important;
    min-height: 120px !important;
    line-height: 1.6 !important;
  }

  .order-summary {
    background: rgba(255, 184, 0, 0.05);
    border: 1px solid rgba(255, 184, 0, 0.2);
    border-radius: 1.25rem;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .order-summary h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #FFB800;
  }

  .order-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    font-size: 0.9375rem;
  }

  .order-item:last-child {
    border-bottom: none;
    margin-top: 1rem;
    padding-top: 1.25rem;
    border-top: 2px solid rgba(255, 184, 0, 0.3);
    font-weight: 700;
    font-size: 1.375rem;
    color: #FFB800;
  }

  .order-item-name {
    color: rgba(255, 255, 255, 0.9);
  }

  .order-item-price {
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }

  .empty-cart {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-cart-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .empty-cart p {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.875rem;
    font-size: 1.0625rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    font-family: inherit;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .btn:hover::before {
    opacity: 1;
  }

  .btn-primary {
    background: linear-gradient(135deg, #25D366, #128C7E);
    color: #fff;
    box-shadow: 0 4px 20px rgba(37, 211, 102, 0.3);
    border: none !important;
  }

  .btn-primary::before {
    background: linear-gradient(135deg, #128C7E, #25D366);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(37, 211, 102, 0.5);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
  }

  .btn-primary svg,
  .btn-primary span {
    position: relative;
    z-index: 1;
  }

  .btn-block {
    width: 100%;
    padding: 1.125rem 2rem;
    font-size: 1.0625rem;
  }

  .whatsapp-icon {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 768px) {
    .checkout-page {
      padding: 1.5rem 0 3rem;
    }

    .container {
      padding: 0 1rem;
    }

    .checkout-header {
      margin-bottom: 2rem;
    }

    .checkout-header h1 {
      font-size: 1.75rem;
    }

    .checkout-content {
      padding: 1.75rem;
      border-radius: 1.25rem;
    }

    .checkout-step {
      margin-bottom: 2rem;
    }

    .checkout-step h2 {
      font-size: 1.25rem;
    }

    .order-summary {
      padding: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .checkout-content {
      padding: 1.5rem;
    }

    .order-summary {
      padding: 1.25rem;
    }

    .form-group input,
    .form-group textarea {
      padding: 0.875rem 1rem !important;
      font-size: 0.9375rem !important;
    }
  }
</style>

<script>
  interface CartItem {
    id: string;
    name: string;
    category: string;
    description: string;
    pricePerLiter: number;
    liters: number;
    image: string;
    quantity: number;
  }

  function loadCart(): CartItem[] {
    const stored = localStorage.getItem('chopp-cart');
    return stored ? JSON.parse(stored) : [];
  }

  function clearCart() {
    localStorage.setItem('chopp-cart', JSON.stringify([]));
  }

  function calculateTotal(items: CartItem[]): number {
    return items.reduce((sum, item) =>
      sum + (item.pricePerLiter * item.liters * item.quantity), 0
    );
  }

  function formatWhatsAppMessage(data: any, items: CartItem[], total: number): string {
    let message = `ðŸº *NOVO PEDIDO*\n\n`;
    message += `*Dados do Cliente:*\n`;
    message += `ðŸ‘¤ Nome: ${data.customerName}\n`;
    message += `ðŸ“± Telefone: ${data.customerPhone}\n`;
    message += `ðŸ“ EndereÃ§o: ${data.address}\n`;
    
    message += `\n*Itens do Pedido:*\n`;
    items.forEach(item => {
      message += `â€¢ ${item.quantity}x ${item.name} (${item.liters}L) - R$ ${(item.pricePerLiter * item.liters * item.quantity).toFixed(2)}\n`;
    });
    
    message += `\nðŸ’° *Total: R$ ${total.toFixed(2)}*`;
    
    return encodeURIComponent(message);
  }

  function renderCheckoutForm(items: CartItem[]) {
    const total = calculateTotal(items);

    return `
      <div class="checkout-step">
        <h2>
          <span class="step-icon">ðŸ“¦</span>
          Resumo do Pedido
        </h2>
        <div class="order-summary">
          <h3>Seus itens</h3>
          ${items.map(item => `
            <div class="order-item">
              <span class="order-item-name">${item.quantity}x ${item.name} (${item.liters}L)</span>
              <span class="order-item-price">R$ ${(item.pricePerLiter * item.liters * item.quantity).toFixed(2)}</span>
            </div>
          `).join('')}
          <div class="order-item">
            <strong>Total</strong>
            <strong>R$ ${total.toFixed(2)}</strong>
          </div>
        </div>
      </div>

      <div class="checkout-step">
        <h2>
          <span class="step-icon">ðŸ‘¤</span>
          Seus Dados
        </h2>
        <form id="checkout-form">
          <div class="form-group">
            <label for="customer-name">Nome Completo *</label>
            <input type="text" id="customer-name" placeholder="Digite seu nome completo" required />
          </div>

          <div class="form-group">
            <label for="customer-phone">Telefone (WhatsApp) *</label>
            <input type="tel" id="customer-phone" placeholder="(11) 99999-9999" required />
          </div>

          <div class="form-group">
            <label for="customer-address">EndereÃ§o de Entrega *</label>
            <textarea id="customer-address" placeholder="Rua, nÃºmero, complemento, bairro, cidade" required></textarea>
          </div>

          <button type="submit" class="btn btn-primary btn-block" id="submit-btn">
            <svg class="whatsapp-icon" viewBox="0 0 32 32" fill="none">
              <path d="M16 0C7.164 0 0 7.164 0 16c0 2.828.738 5.484 2.028 7.78L.07 31.144l7.604-1.996A15.923 15.923 0 0016 32c8.836 0 16-7.164 16-16S24.836 0 16 0zm0 29.333c-2.548 0-4.94-.708-6.98-1.94l-.5-.296-5.188 1.36 1.384-5.056-.324-.52A13.265 13.265 0 012.667 16c0-7.364 5.968-13.333 13.333-13.333S29.333 8.636 29.333 16 23.364 29.333 16 29.333z" fill="currentColor"/>
              <path d="M12 9.333c-.372 0-.932.14-1.416.72-.484.58-1.851 1.807-1.851 4.413 0 2.607 1.892 5.12 2.156 5.472.264.352 3.72 5.68 9.012 7.964 4.396 1.896 5.292 1.52 6.244 1.424.952-.096 3.072-1.256 3.504-2.468.432-1.212.432-2.252.304-2.468-.128-.216-.48-.352-1.008-.62-.528-.268-3.124-1.54-3.604-1.716-.48-.176-.828-.264-1.176.264-.348.528-1.348 1.716-1.652 2.068-.304.352-.608.396-1.136.128-.528-.268-2.228-.82-4.244-2.616-1.568-1.396-2.628-3.12-2.936-3.648-.308-.528-.032-.816.232-1.08.24-.24.528-.62.792-.932.264-.312.352-.528.528-.88.176-.352.088-.66-.044-.924-.132-.264-1.176-2.836-1.612-3.884-.424-1.02-.856-.88-1.176-.896-.304-.016-.652-.02-1-.02z" fill="currentColor"/>
            </svg>
            <span>Enviar Pedido via WhatsApp</span>
          </button>
        </form>
      </div>
    `;
  }

  function render() {
    const content = document.getElementById('checkout-content');
    if (!content) return;

    const items = loadCart();

    if (items.length === 0) {
      content.innerHTML = `
        <div class="empty-cart">
          <div class="empty-cart-icon">ðŸ›’</div>
          <p>Seu carrinho estÃ¡ vazio</p>
          <a href="/loja" class="btn btn-primary">Ir para a Loja</a>
        </div>
      `;
      return;
    }

    content.innerHTML = renderCheckoutForm(items);
    setupFormListeners();
  }

  function setupFormListeners() {
    const form = document.getElementById('checkout-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const name = (document.getElementById('customer-name') as HTMLInputElement).value;
      const phone = (document.getElementById('customer-phone') as HTMLInputElement).value;
      const address = (document.getElementById('customer-address') as HTMLTextAreaElement).value;

      if (!name || !phone || !address) {
        alert('Por favor, preencha todos os campos');
        return;
      }

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span>Processando...</span>';

      const items = loadCart();
      const total = calculateTotal(items);

      const orderData = {
        customerName: name,
        customerPhone: phone,
        address: address
      };

      const order = {
        id: `${Date.now()}-${Math.random().toString(36).slice(2, 7)}`,
        customerName: name,
        customerPhone: phone,
        customerEmail: '',
        paymentMethod: 'Dinheiro',
        items: items.map(item => ({
          productId: item.id,
          productName: item.name,
          liters: item.liters,
          quantity: item.quantity,
          price: item.pricePerLiter * item.liters * item.quantity
        })),
        total: total,
        status: 'pending' as const,
        createdAt: new Date().toISOString(),
        address: address
      };

      try {
        const response = await fetch('/api/orders', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(order)
        });

        if (!response.ok) throw new Error('Erro ao criar pedido');

        const whatsappMessage = formatWhatsAppMessage(orderData, items, total);
        const whatsappNumber = '5589994333316';
        const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

        clearCart();
        window.open(whatsappUrl, '_blank');
        
        setTimeout(() => {
          window.location.href = '/loja';
        }, 1000);

      } catch (error) {
        console.error('Error creating order:', error);
        alert('Erro ao processar pedido. Tente novamente.');
        submitBtn.disabled = false;
        submitBtn.innerHTML = `
          <svg class="whatsapp-icon" viewBox="0 0 32 32" fill="none">
            <path d="M16 0C7.164 0 0 7.164 0 16c0 2.828.738 5.484 2.028 7.78L.07 31.144l7.604-1.996A15.923 15.923 0 0016 32c8.836 0 16-7.164 16-16S24.836 0 16 0zm0 29.333c-2.548 0-4.94-.708-6.98-1.94l-.5-.296-5.188 1.36 1.384-5.056-.324-.52A13.265 13.265 0 012.667 16c0-7.364 5.968-13.333 13.333-13.333S29.333 8.636 29.333 16 23.364 29.333 16 29.333z" fill="currentColor"/>
            <path d="M12 9.333c-.372 0-.932.14-1.416.72-.484.58-1.851 1.807-1.851 4.413 0 2.607 1.892 5.12 2.156 5.472.264.352 3.72 5.68 9.012 7.964 4.396 1.896 5.292 1.52 6.244 1.424.952-.096 3.072-1.256 3.504-2.468.432-1.212.432-2.252.304-2.468-.128-.216-.48-.352-1.008-.62-.528-.268-3.124-1.54-3.604-1.716-.48-.176-.828-.264-1.176.264-.348.528-1.348 1.716-1.652 2.068-.304.352-.608.396-1.136.128-.528-.268-2.228-.82-4.244-2.616-1.568-1.396-2.628-3.12-2.936-3.648-.308-.528-.032-.816.232-1.08.24-.24.528-.62.792-.932.264-.312.352-.528.528-.88.176-.352.088-.66-.044-.924-.132-.264-1.176-2.836-1.612-3.884-.424-1.02-.856-.88-1.176-.896-.304-.016-.652-.02-1-.02z" fill="currentColor"/>
          </svg>
          <span>Enviar Pedido via WhatsApp</span>
        `;
      }
    });
  }

  render();
</script>
</Layout>