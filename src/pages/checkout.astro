---
// FILE: src/pages/checkout.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Checkout - Finalizar Pedido">
  <div class="checkout-page">
    <div class="checkout-background">
      <div class="bg-gradient"></div>
      <div class="bg-grid"></div>
    </div>
    
    <div class="container">
      <div class="checkout-header">
        <a href="/loja" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Voltar para a loja
        </a>
        <div class="header-content">
          <div class="header-badge">
            <span class="badge-dot"></span>
            Checkout Seguro
          </div>
          <h1>Finalizar Pedido</h1>
          <p class="header-subtitle">Complete seus dados para confirmar a compra</p>
        </div>
      </div>

      <div id="checkout-content" class="checkout-content"></div>
    </div>
  </div>
</Layout>

<style is:global>
  .checkout-page {
    min-height: 100vh;
    background: #0a0a0a;
    padding: 2rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .checkout-background {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    max-width: 1200px;
    height: 600px;
    background: radial-gradient(circle at 50% 0%, rgba(255, 184, 0, 0.08) 0%, transparent 70%);
  }

  .bg-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    mask-image: linear-gradient(to bottom, transparent, black 20%, black 80%, transparent);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .checkout-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    margin-bottom: 2rem;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .back-link:hover {
    color: #FFB800;
    gap: 0.75rem;
  }

  .back-link svg {
    transition: transform 0.3s ease;
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  .header-content {
    text-align: center;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.2);
    border-radius: 2rem;
    color: #FFB800;
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #FFB800;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  .checkout-header h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .header-subtitle {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    margin: 0;
  }

  .checkout-content {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 1.5rem;
    padding: 2.5rem;
    backdrop-filter: blur(10px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  }

  .checkout-step {
    margin-bottom: 3rem;
  }

  .checkout-step:last-child {
    margin-bottom: 0;
  }

  .checkout-step h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .step-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(255, 184, 0, 0.2), rgba(255, 184, 0, 0.1));
    border-radius: 0.75rem;
    font-size: 1.25rem;
  }

  .form-group {
    margin-bottom: 1.5rem !important;
  }

  .form-group label {
    display: block !important;
    margin-bottom: 0.75rem !important;
    font-weight: 600 !important;
    font-size: 0.9375rem !important;
    color: rgba(255, 255, 255, 0.9) !important;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100% !important;
    padding: 1rem 1.25rem !important;
    background: rgba(255, 255, 255, 0.05) !important;
    border: 2px solid rgba(255, 255, 255, 0.15) !important;
    border-radius: 0.875rem !important;
    color: #fff !important;
    font-size: 1rem !important;
    font-family: inherit !important;
    transition: all 0.3s ease !important;
    box-sizing: border-box !important;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none !important;
    border-color: #FFB800 !important;
    background: rgba(255, 184, 0, 0.08) !important;
    box-shadow: 0 0 0 4px rgba(255, 184, 0, 0.15) !important;
  }

  .form-group input:hover,
  .form-group select:hover,
  .form-group textarea:hover {
    border-color: rgba(255, 184, 0, 0.4) !important;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.4) !important;
  }

  .form-group textarea {
    resize: vertical !important;
    min-height: 120px !important;
    line-height: 1.6 !important;
  }

  .order-summary {
    background: rgba(255, 184, 0, 0.05);
    border: 1px solid rgba(255, 184, 0, 0.2);
    border-radius: 1.25rem;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .order-summary h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #FFB800;
  }

  .order-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    font-size: 0.9375rem;
  }

  .order-item:last-child {
    border-bottom: none;
    margin-top: 1rem;
    padding-top: 1.25rem;
    border-top: 2px solid rgba(255, 184, 0, 0.3);
    font-weight: 700;
    font-size: 1.375rem;
    color: #FFB800;
  }

  .order-item-name {
    color: rgba(255, 255, 255, 0.9);
  }

  .order-item-price {
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
  }

  .payment-status {
    text-align: center;
    padding: 3rem 1.5rem;
  }

  .payment-status-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    animation: fadeInScale 0.5s ease;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.5);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .payment-status h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #fff;
  }

  .payment-status p {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .order-number {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: rgba(255, 184, 0, 0.1);
    border: 1px solid rgba(255, 184, 0, 0.3);
    border-radius: 0.875rem;
    font-weight: 600;
    color: #FFB800;
    margin: 1.5rem 0;
    font-size: 1.0625rem;
  }

  .payment-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.25rem;
    margin-bottom: 2rem;
  }

  .payment-method-btn {
    padding: 2rem 1.25rem !important;
    background: rgba(255, 255, 255, 0.04) !important;
    border: 2px solid rgba(255, 255, 255, 0.12) !important;
    border-radius: 1.25rem !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    text-align: center !important;
    position: relative !important;
    overflow: hidden !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;
    gap: 0.75rem !important;
  }

  .payment-method-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255, 184, 0, 0.15), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .payment-method-btn:hover {
    border-color: rgba(255, 184, 0, 0.5) !important;
    transform: translateY(-4px) !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4) !important;
  }

  .payment-method-btn:hover::before {
    opacity: 1;
  }

  .payment-method-btn.selected {
    border-color: #FFB800 !important;
    background: rgba(255, 184, 0, 0.15) !important;
    box-shadow: 0 0 0 4px rgba(255, 184, 0, 0.2), 0 10px 30px rgba(0, 0, 0, 0.4) !important;
    transform: translateY(-2px) !important;
  }

  .payment-method-btn .icon {
    font-size: 3rem !important;
    position: relative !important;
    z-index: 1 !important;
    margin: 0 !important;
  }

  .payment-method-btn .label {
    display: block !important;
    font-size: 0.9375rem !important;
    font-weight: 700 !important;
    color: rgba(255, 255, 255, 0.9) !important;
    position: relative !important;
    z-index: 1 !important;
    margin: 0 !important;
  }

  .payment-method-btn.selected .label {
    color: #FFB800 !important;
  }

  .empty-cart {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-cart-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .empty-cart p {
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .btn {
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.875rem;
    font-size: 1.0625rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.625rem;
    font-family: inherit;
    position: relative;
    overflow: hidden;
  }

  .btn::before {
    content: '';
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .btn:hover::before {
    opacity: 1;
  }

  .btn-primary {
    background: linear-gradient(135deg, #FFB800, #FF8C00);
    color: #000;
    box-shadow: 0 4px 20px rgba(255, 184, 0, 0.3);
    border: none !important;
  }

  .btn-primary::before {
    background: linear-gradient(135deg, #FF8C00, #FFB800);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(255, 184, 0, 0.5);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .btn-primary svg,
  .btn-primary span {
    position: relative;
    z-index: 1;
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.9);
    border: 2px solid rgba(255, 255, 255, 0.15);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .btn-block {
    width: 100%;
    padding: 1.125rem 2rem;
    font-size: 1.0625rem;
  }

  .spinner {
    display: inline-block;
    width: 40px;
    height: 40px;
    border: 3px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    border-top-color: #FFB800;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 768px) {
    .checkout-page {
      padding: 1.5rem 0 3rem;
    }

    .container {
      padding: 0 1rem;
    }

    .checkout-header {
      margin-bottom: 2rem;
    }

    .checkout-header h1 {
      font-size: 1.75rem;
    }

    .checkout-content {
      padding: 1.75rem;
      border-radius: 1.25rem;
    }

    .checkout-step {
      margin-bottom: 2rem;
    }

    .checkout-step h2 {
      font-size: 1.25rem;
    }

    .payment-methods {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .payment-method-btn {
      padding: 1.5rem 1rem !important;
    }

    .payment-method-btn .icon {
      font-size: 2.5rem !important;
    }

    .order-summary {
      padding: 1.5rem;
    }

    .payment-status {
      padding: 2rem 1rem;
    }

    .payment-status-icon {
      font-size: 3rem;
    }

    .payment-status h2 {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .checkout-content {
      padding: 1.5rem;
    }

    .order-summary {
      padding: 1.25rem;
    }

    .payment-method-btn {
      padding: 1.25rem 0.75rem !important;
    }

    .payment-method-btn .icon {
      font-size: 2.25rem !important;
    }

    .payment-method-btn .label {
      font-size: 0.875rem !important;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      padding: 0.875rem 1rem !important;
      font-size: 0.9375rem !important;
    }
  }
</style>

<script>
  interface CartItem {
    id: string;
    name: string;
    category: string;
    description: string;
    pricePerLiter: number;
    liters: number;
    image: string;
    quantity: number;
  }

  let currentStep: 'form' | 'payment' | 'waiting' | 'success' = 'form';
  let orderData: any = null;

  function loadCart(): CartItem[] {
    const stored = localStorage.getItem('chopp-cart');
    return stored ? JSON.parse(stored) : [];
  }

  function clearCart() {
    localStorage.setItem('chopp-cart', JSON.stringify([]));
  }

  function calculateTotal(items: CartItem[]): number {
    return items.reduce((sum, item) =>
      sum + (item.pricePerLiter * item.liters * item.quantity), 0
    );
  }

  function renderCheckoutForm(items: CartItem[]) {
    const total = calculateTotal(items);

    return `
      <div class="checkout-step">
        <h2>
          <span class="step-icon">üì¶</span>
          Resumo do Pedido
        </h2>
        <div class="order-summary">
          <h3>Seus itens</h3>
          ${items.map(item => `
            <div class="order-item">
              <span class="order-item-name">${item.quantity}x ${item.name} (${item.liters}L)</span>
              <span class="order-item-price">R$ ${(item.pricePerLiter * item.liters * item.quantity).toFixed(2)}</span>
            </div>
          `).join('')}
          <div class="order-item">
            <strong>Total</strong>
            <strong>R$ ${total.toFixed(2)}</strong>
          </div>
        </div>
      </div>

      <div class="checkout-step">
        <h2>
          <span class="step-icon">üë§</span>
          Seus Dados
        </h2>
        <form id="checkout-form">
          <div class="form-group">
            <label for="customer-name">Nome Completo *</label>
            <input type="text" id="customer-name" placeholder="Digite seu nome completo" required />
          </div>

          <div class="form-group">
            <label for="customer-phone">Telefone (WhatsApp) *</label>
            <input type="tel" id="customer-phone" placeholder="(11) 99999-9999" required />
          </div>

          <div class="form-group">
            <label for="customer-email">E-mail</label>
            <input type="email" id="customer-email" placeholder="seu@email.com" />
          </div>

          <div class="form-group">
            <label for="customer-address">Endere√ßo de Entrega</label>
            <textarea id="customer-address" placeholder="Rua, n√∫mero, complemento, bairro, cidade"></textarea>
          </div>

          <div class="form-group">
            <label for="delivery-date">Data da Festa (opcional)</label>
            <input type="date" id="delivery-date" />
          </div>

          <button type="submit" class="btn btn-primary btn-block">
            <span>Continuar para Pagamento</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </button>
        </form>
      </div>
    `;
  }

  function renderPaymentMethod() {
    return `
      <div class="checkout-step">
        <h2>
          <span class="step-icon">üí≥</span>
          Forma de Pagamento
        </h2>
        <div class="payment-methods">
          <button class="payment-method-btn" data-method="pix" type="button">
            <div class="icon">üì±</div>
            <div class="label">PIX</div>
          </button>
          <button class="payment-method-btn" data-method="credit" type="button">
            <div class="icon">üí≥</div>
            <div class="label">Cr√©dito</div>
          </button>
          <button class="payment-method-btn" data-method="debit" type="button">
            <div class="icon">üí≥</div>
            <div class="label">D√©bito</div>
          </button>
          <button class="payment-method-btn" data-method="cash" type="button">
            <div class="icon">üíµ</div>
            <div class="label">Dinheiro</div>
          </button>
        </div>
        <button id="back-to-form" class="btn btn-secondary btn-block" type="button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          <span>Voltar</span>
        </button>
      </div>
    `;
  }

  function renderWaitingPayment() {
    return `
      <div class="payment-status">
        <div class="payment-status-icon">‚è≥</div>
        <h2>Aguardando Pagamento</h2>
        <p>Seu pedido foi registrado com sucesso!<br>Aguarde a confirma√ß√£o do pagamento.</p>
        <div class="order-number">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2"/>
            <path d="M3 9h18M9 21V9"/>
          </svg>
          Pedido #${orderData.id}
        </div>
        <div style="margin: 2rem 0;">
          <div class="spinner"></div>
        </div>
        <p style="color: rgba(255, 255, 255, 0.5); font-size: 0.875rem;">
          Voc√™ receber√° uma confirma√ß√£o por WhatsApp em breve.
        </p>
        <button id="finish-order" class="btn btn-primary btn-block" type="button" style="margin-top: 2rem;">
          Ver Meus Pedidos
        </button>
      </div>
    `;
  }

  function renderSuccess() {
    return `
      <div class="payment-status">
        <div class="payment-status-icon">‚úÖ</div>
        <h2>Pedido Confirmado!</h2>
        <p>Obrigado pela sua compra!<br>Seu pedido est√° sendo preparado.</p>
        <div class="order-number">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2"/>
            <path d="M3 9h18M9 21V9"/>
          </svg>
          Pedido #${orderData.id}
        </div>
        <a href="/loja" class="btn btn-primary btn-block" style="margin-top: 2rem;">
          Voltar para a Loja
        </a>
      </div>
    `;
  }

  function render() {
    const content = document.getElementById('checkout-content');
    if (!content) return;

    const items = loadCart();

    if (items.length === 0) {
      content.innerHTML = `
        <div class="empty-cart">
          <div class="empty-cart-icon">üõí</div>
          <p>Seu carrinho est√° vazio</p>
          <a href="/loja" class="btn btn-primary">Ir para a Loja</a>
        </div>
      `;
      return;
    }

    if (currentStep === 'form') {
      content.innerHTML = renderCheckoutForm(items);
      setupFormListeners();
    } else if (currentStep === 'payment') {
      content.innerHTML = renderPaymentMethod();
      setupPaymentListeners();
    } else if (currentStep === 'waiting') {
      content.innerHTML = renderWaitingPayment();
      setupWaitingListeners();
    } else if (currentStep === 'success') {
      content.innerHTML = renderSuccess();
    }
  }

  function setupFormListeners() {
    const form = document.getElementById('checkout-form') as HTMLFormElement;
    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      const name = (document.getElementById('customer-name') as HTMLInputElement).value;
      const phone = (document.getElementById('customer-phone') as HTMLInputElement).value;
      const email = (document.getElementById('customer-email') as HTMLInputElement).value;
      const address = (document.getElementById('customer-address') as HTMLTextAreaElement).value;
      const deliveryDate = (document.getElementById('delivery-date') as HTMLInputElement).value;

      if (!name || !phone) {
        alert('Por favor, preencha nome e telefone');
        return;
      }

      orderData = {
        customerName: name,
        customerPhone: phone,
        customerEmail: email,
        address: address,
        deliveryDate: deliveryDate || null
      };

      currentStep = 'payment';
      render();
    });
  }

  function setupPaymentListeners() {
    document.querySelectorAll('.payment-method-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const method = (e.currentTarget as HTMLElement).getAttribute('data-method');
        if (!method) return;

        document.querySelectorAll('.payment-method-btn').forEach(b => b.classList.remove('selected'));
        (e.currentTarget as HTMLElement).classList.add('selected');

        await createOrder(method);
      });
    });

    document.getElementById('back-to-form')?.addEventListener('click', () => {
      currentStep = 'form';
      render();
    });
  }

  function setupWaitingListeners() {
    document.getElementById('finish-order')?.addEventListener('click', () => {
      window.location.href = '/loja';
    });

    setTimeout(() => {
      currentStep = 'success';
      render();
      clearCart();
    }, 3000);
  }

  async function createOrder(paymentMethod: string) {
    const items = loadCart();
    const total = calculateTotal(items);

    const order = {
      id: `${Date.now()}-${Math.random().toString(36).slice(2, 7)}`,
      customerName: orderData.customerName,
      customerPhone: orderData.customerPhone,
      customerEmail: orderData.customerEmail,
      paymentMethod: paymentMethod,
      items: items.map(item => ({
        productId: item.id,
        productName: item.name,
        liters: item.liters,
        quantity: item.quantity,
        price: item.pricePerLiter * item.liters * item.quantity
      })),
      total: total,
      status: 'pending' as const,
      createdAt: new Date().toISOString(),
      deliveryDate: orderData.deliveryDate,
      address: orderData.address
    };

    try {
      const response = await fetch('/api/orders', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(order)
      });

      if (!response.ok) throw new Error('Erro ao criar pedido');

      orderData.id = order.id;
      currentStep = 'waiting';
      render();
    } catch (error) {
      console.error('Error creating order:', error);
      alert('Erro ao criar pedido. Tente novamente.');
    }
  }

  render();
</script>
