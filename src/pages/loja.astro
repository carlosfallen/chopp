---
// FILE: src/pages/loja.astro (atualizado)
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ShopContent from '../components/solid/ShopContent';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Loja - CHOPEHAUS | Compre Chopp Online</title>
  <meta name="description" content="Escolha seu chopp preferido e faça seu pedido online. Chopeira grátis, entrega rápida e instalação profissional.">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
</head>
<body>
  <Header />
  <main class="shop-main">
    <ShopContent client:load />
  </main>
  <Footer />
</body>
</html>

<style>
  .shop-main {
    min-height: 100vh;
    padding-top: 80px;
  }
  
  .shop-header {
    padding: var(--spacing-2xl) 0;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.1), rgba(255, 191, 0, 0.05));
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .shop-header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-xl);
  }
  
  .shop-header-text h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-sm);
  }
  
  .shop-header-text p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
  }
  
  @media (max-width: 768px) {
    .shop-header-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>