---
// FILE: src/pages/admin/images.astro
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Gerenciar Imagens">
  <div class="admin-content">
    <div class="content-header">
      <div>
        <h1>Gerenciar Imagens</h1>
        <p>Upload e organiza√ß√£o de imagens para produtos</p>
      </div>
      <button class="btn btn-primary" id="upload-btn">
        <span>üì§</span>
        <span>Upload de Imagem</span>
      </button>
    </div>
    
    <div class="upload-area" id="upload-area">
      <input type="file" id="file-input" accept="image/*" style="display: none;" />
      <div class="upload-placeholder">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="17 8 12 3 7 8"/>
          <line x1="12" y1="3" x2="12" y2="15"/>
        </svg>
        <p>Clique ou arraste uma imagem aqui</p>
        <span>PNG, JPG, WEBP at√© 5MB</span>
      </div>
      <div id="upload-progress" style="display: none;">
        <div class="progress-bar">
          <div class="progress-fill" id="progress-fill"></div>
        </div>
        <p id="progress-text">Uploading...</p>
      </div>
    </div>
    
    <div class="alert-dev" id="dev-alert" style="display: none;">
      <strong>‚ö†Ô∏è Modo Desenvolvimento</strong>
      <p>As imagens n√£o s√£o realmente enviadas. Deploy no Cloudflare para upload real.</p>
    </div>
    
    <div class="images-grid" id="images-grid">
      <!-- Images will be loaded here -->
    </div>
  </div>
</AdminLayout>

<style>
  .admin-content {
    padding: var(--spacing-2xl);
  }
  
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
  }
  
  .alert-dev {
    padding: var(--spacing-md);
    background: rgba(255, 193, 7, 0.1);
    border: 1px solid rgba(255, 193, 7, 0.3);
    border-radius: var(--border-radius);
    margin-bottom: var(--spacing-lg);
  }
  
  .alert-dev strong {
    display: block;
    color: #ffc107;
    margin-bottom: var(--spacing-xs);
  }
  
  .alert-dev p {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }
  
  .upload-area {
    padding: var(--spacing-3xl);
    background: var(--color-bg-secondary);
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-radius: var(--border-radius-lg);
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .upload-area:hover {
    border-color: var(--color-accent-gold);
    background: rgba(212, 175, 55, 0.05);
  }
  
  .upload-placeholder svg {
    margin: 0 auto var(--spacing-md);
    color: var(--color-accent-gold);
  }
  
  .upload-placeholder p {
    font-size: 1.125rem;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
  }
  
  .upload-placeholder span {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: var(--spacing-sm);
  }
  
  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--color-accent-gold), var(--color-accent-amber));
    transition: width 0.3s ease;
    width: 0%;
  }
  
  .images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--spacing-lg);
  }
  
  .image-card {
    position: relative;
    background: var(--color-bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: all var(--transition-fast);
  }
  
  .image-card:hover {
    border-color: var(--color-accent-gold);
    transform: translateY(-4px);
  }
  
  .image-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: rgba(255, 255, 255, 0.05);
  }
  
  .image-info {
    padding: var(--spacing-sm);
  }
  
  .image-url {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    word-break: break-all;
    margin-bottom: var(--spacing-xs);
  }
  
  .image-actions {
    display: flex;
    gap: var(--spacing-xs);
  }
  
  .btn-copy {
    flex: 1;
    padding: var(--spacing-xs);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    font-size: 0.875rem;
    border: none;
    color: var(--color-text-primary);
    cursor: pointer;
  }
  
  .btn-copy:hover {
    background: rgba(212, 175, 55, 0.2);
  }
</style>

<script>
  const uploadArea = document.getElementById('upload-area');
  const fileInput = document.getElementById('file-input');
  const uploadBtn = document.getElementById('upload-btn');
  const imagesGrid = document.getElementById('images-grid');
  const uploadProgress = document.getElementById('upload-progress');
  const progressFill = document.getElementById('progress-fill');
  const progressText = document.getElementById('progress-text');
  const devAlert = document.getElementById('dev-alert');
  
  let uploadedImages: string[] = [];
  let isDevMode = false;
  
  function loadImages() {
    const stored = localStorage.getItem('uploaded_images');
    if (stored) {
      uploadedImages = JSON.parse(stored);
      renderImages();
    }
  }
  
  function renderImages() {
    if (!imagesGrid) return;
    
    imagesGrid.innerHTML = uploadedImages.map(url => `
      <div class="image-card">
        <img src="${url}" alt="Uploaded image" onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%22200%22%3E%3Crect fill=%22%23333%22 width=%22200%22 height=%22200%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 fill=%22%23666%22 text-anchor=%22middle%22 dy=%22.3em%22%3EImagem%3C/text%3E%3C/svg%3E'" />
        <div class="image-info">
          <div class="image-url">${url}</div>
          <div class="image-actions">
            <button class="btn-copy" data-url="${url}">
              üìã Copiar URL
            </button>
          </div>
        </div>
      </div>
    `).join('');
    
    document.querySelectorAll('.btn-copy').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const target = e.currentTarget as HTMLElement;
        const url = target.getAttribute('data-url');
        if (url) {
          try {
            if (navigator.clipboard && navigator.clipboard.writeText) {
              await navigator.clipboard.writeText(url);
              const originalText = target.innerHTML;
              target.innerHTML = '‚úì Copiado!';
              setTimeout(() => {
                target.innerHTML = originalText;
              }, 2000);
            } else {
              // Fallback para browsers antigos
              const textArea = document.createElement('textarea');
              textArea.value = url;
              textArea.style.position = 'fixed';
              textArea.style.left = '-999999px';
              document.body.appendChild(textArea);
              textArea.select();
              document.execCommand('copy');
              document.body.removeChild(textArea);
              alert('URL copiada!');
            }
          } catch (err) {
            console.error('Erro ao copiar:', err);
            alert('Erro ao copiar URL. Copie manualmente: ' + url);
          }
        }
      });
    });
  }
  
  uploadBtn?.addEventListener('click', () => {
    fileInput?.click();
  });
  
  uploadArea?.addEventListener('click', () => {
    fileInput?.click();
  });
  
  uploadArea?.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = 'var(--color-accent-gold)';
  });
  
  uploadArea?.addEventListener('dragleave', () => {
    uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
  });
  
  uploadArea?.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
    
    const files = e.dataTransfer?.files;
    if (files && files[0]) {
      handleFileUpload(files[0]);
    }
  });
  
  fileInput?.addEventListener('change', (e) => {
    const files = (e.target as HTMLInputElement).files;
    if (files && files[0]) {
      handleFileUpload(files[0]);
    }
  });
  
  async function handleFileUpload(file: File) {
    if (!file.type.startsWith('image/')) {
      alert('Por favor, selecione uma imagem v√°lida');
      return;
    }
    
    if (file.size > 5 * 1024 * 1024) {
      alert('A imagem deve ter no m√°ximo 5MB');
      return;
    }
    
    const placeholder = uploadArea?.querySelector('.upload-placeholder') as HTMLElement;
    if (placeholder) placeholder.style.display = 'none';
    if (uploadProgress) uploadProgress.style.display = 'block';
    
    try {
      const formData = new FormData();
      formData.append('file', file);
      
      let progress = 0;
      const progressInterval = setInterval(() => {
        progress += 10;
        if (progress <= 90 && progressFill) {
          progressFill.style.width = `${progress}%`;
        }
      }, 100);
      
      const response = await fetch('/api/upload', {
        method: 'POST',
        body: formData
      });
      
      clearInterval(progressInterval);
      
      const data = await response.json();
      
      if (!response.ok) {
        throw new Error(data.details || data.error || 'Upload failed');
      }
      
      if (progressFill) progressFill.style.width = '100%';
      
      if (data.warning) {
        isDevMode = true;
        if (devAlert) devAlert.style.display = 'block';
        if (progressText) progressText.textContent = '‚ö†Ô∏è Mock upload (modo dev)';
      } else {
        if (progressText) progressText.textContent = '‚úì Upload completo!';
      }
      
      uploadedImages.unshift(data.url);
      localStorage.setItem('uploaded_images', JSON.stringify(uploadedImages));
      
      setTimeout(() => {
        if (placeholder) placeholder.style.display = 'block';
        if (uploadProgress) uploadProgress.style.display = 'none';
        if (progressFill) progressFill.style.width = '0%';
        if (progressText) progressText.textContent = 'Uploading...';
        
        renderImages();
      }, 1500);
      
    } catch (error) {
      console.error('Upload error:', error);
      alert(`Erro ao fazer upload: ${error instanceof Error ? error.message : 'Unknown error'}`);
      
      if (placeholder) placeholder.style.display = 'block';
      if (uploadProgress) uploadProgress.style.display = 'none';
    }
  }
  
  loadImages();
</script>