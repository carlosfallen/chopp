import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Gerenciar Imagens">
  <div class="admin-content">
    <div class="content-header">
      <div>
        <h1>Gerenciar Imagens</h1>
        <p>Upload e organizaÃ§Ã£o de imagens para produtos</p>
      </div>
      <button class="btn btn-primary" id="upload-btn">
        <span>ðŸ“¤</span>
        <span>Upload de Imagem</span>
      </button>
    </div>
    
    <div class="upload-area" id="upload-area">
      <input type="file" id="file-input" accept="image/*" style="display: none;" />
      <div class="upload-placeholder">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="17 8 12 3 7 8"/>
          <line x1="12" y1="3" x2="12" y2="15"/>
        </svg>
        <p>Clique ou arraste uma imagem aqui</p>
        <span>PNG, JPG, WEBP atÃ© 5MB</span>
      </div>
      <div id="upload-progress" style="display: none;">
        <div class="progress-bar">
          <div class="progress-fill" id="progress-fill"></div>
        </div>
        <p id="progress-text">Uploading...</p>
      </div>
    </div>
    
    <div class="images-grid" id="images-grid">
      <!-- Images will be loaded here -->
    </div>
  </div>
</AdminLayout>

<style>
  .admin-content {
    padding: var(--spacing-2xl);
  }
  
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
  }
  
  .upload-area {
    padding: var(--spacing-3xl);
    background: var(--color-bg-secondary);
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-radius: var(--border-radius-lg);
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .upload-area:hover {
    border-color: var(--color-accent-gold);
    background: rgba(212, 175, 55, 0.05);
  }
  
  .upload-placeholder svg {
    margin: 0 auto var(--spacing-md);
    color: var(--color-accent-gold);
  }
  
  .upload-placeholder p {
    font-size: 1.125rem;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
  }
  
  .upload-placeholder span {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: var(--spacing-sm);
  }
  
  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--color-accent-gold), var(--color-accent-amber));
    transition: width 0.3s ease;
    width: 0%;
  }
  
  .images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--spacing-lg);
  }
  
  .image-card {
    position: relative;
    background: var(--color-bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: all var(--transition-fast);
  }
  
  .image-card:hover {
    border-color: var(--color-accent-gold);
    transform: translateY(-4px);
  }
  
  .image-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .image-info {
    padding: var(--spacing-sm);
  }
  
  .image-url {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    word-break: break-all;
    margin-bottom: var(--spacing-xs);
  }
  
  .image-actions {
    display: flex;
    gap: var(--spacing-xs);
  }
  
  .btn-copy {
    flex: 1;
    padding: var(--spacing-xs);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    font-size: 0.875rem;
  }
  
  .btn-copy:hover {
    background: rgba(212, 175, 55, 0.2);
  }
</style>

<script>
  const uploadArea = document.getElementById('upload-area');
  const fileInput = document.getElementById('file-input');
  const uploadBtn = document.getElementById('upload-btn');
  const imagesGrid = document.getElementById('images-grid');
  const uploadProgress = document.getElementById('upload-progress');
  const progressFill = document.getElementById('progress-fill');
  const progressText = document.getElementById('progress-text');
  
  let uploadedImages: string[] = [];
  
  // Load existing images from localStorage
  function loadImages() {
    const stored = localStorage.getItem('uploaded_images');
    if (stored) {
      uploadedImages = JSON.parse(stored);
      renderImages();
    }
  }
  
  function renderImages() {
    if (!imagesGrid) return;
    
    imagesGrid.innerHTML = uploadedImages.map(url => `
      <div class="image-card">
        <img src="${url}" alt="Uploaded image" />
        <div class="image-info">
          <div class="image-url">${url}</div>
          <div class="image-actions">
            <button class="btn-copy" data-url="${url}">
              ðŸ“‹ Copiar URL
            </button>
          </div>
        </div>
      </div>
    `).join('');
    
    // Add copy functionality
    document.querySelectorAll('.btn-copy').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const url = (e.target as HTMLElement).getAttribute('data-url');
        if (url) {
          navigator.clipboard.writeText(url);
          alert('URL copiada!');
        }
      });
    });
  }
  
  uploadBtn?.addEventListener('click', () => {
    fileInput?.click();
  });
  
  uploadArea?.addEventListener('click', () => {
    fileInput?.click();
  });
  
  uploadArea?.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = 'var(--color-accent-gold)';
  });
  
  uploadArea?.addEventListener('dragleave', () => {
    uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
  });
  
  uploadArea?.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
    
    const files = e.dataTransfer?.files;
    if (files && files[0]) {
      handleFileUpload(files[0]);
    }
  });
  
  fileInput?.addEventListener('change', (e) => {
    const files = (e.target as HTMLInputElement).files;
    if (files && files[0]) {
      handleFileUpload(files[0]);
    }
  });
  
  async function handleFileUpload(file: File) {
    if (!file.type.startsWith('image/')) {
      alert('Por favor, selecione uma imagem vÃ¡lida');
      return;
    }
    
    if (file.size > 5 * 1024 * 1024) {
      alert('A imagem deve ter no mÃ¡ximo 5MB');
      return;
    }
    
    // Show progress
    const placeholder = uploadArea?.querySelector('.upload-placeholder') as HTMLElement;
    if (placeholder) placeholder.style.display = 'none';
    if (uploadProgress) uploadProgress.style.display = 'block';
    
    try {
      const formData = new FormData();
      formData.append('file', file);
      
      // Simulate progress
      let progress = 0;
      const progressInterval = setInterval(() => {
        progress += 10;
        if (progress <= 90 && progressFill) {
          progressFill.style.width = `${progress}%`;
        }
      }, 100);
      
      const response = await fetch('/api/upload', {
        method: 'POST',
        body: formData
      });
      
      clearInterval(progressInterval);
      
      if (!response.ok) {
        throw new Error('Upload failed');
      }
      
      const data = await response.json();
      
      if (progressFill) progressFill.style.width = '100%';
      if (progressText) progressText.textContent = 'Upload completo!';
      
      // Save to localStorage
      uploadedImages.unshift(data.url);
      localStorage.setItem('uploaded_images', JSON.stringify(uploadedImages));
      
      setTimeout(() => {
        if (placeholder) placeholder.style.display = 'block';
        if (uploadProgress) uploadProgress.style.display = 'none';
        if (progressFill) progressFill.style.width = '0%';
        if (progressText) progressText.textContent = 'Uploading...';
        
        renderImages();
      }, 1000);
      
    } catch (error) {
      console.error('Upload error:', error);
      alert('Erro ao fazer upload. Por favor, tente novamente.');
      
      if (placeholder) placeholder.style.display = 'block';
      if (uploadProgress) uploadProgress.style.display = 'none';
    }
  }
  
  loadImages();
</script>