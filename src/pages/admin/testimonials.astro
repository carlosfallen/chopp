import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Gerenciar Depoimentos">
  <div class="admin-content">
    <div class="content-header">
      <div>
        <h1>Depoimentos de Clientes</h1>
        <p>Gerencie avalia√ß√µes e feedback</p>
      </div>
      <button class="btn btn-primary" id="add-testimonial-btn">
        <span>+</span>
        <span>Novo Depoimento</span>
      </button>
    </div>
    
    <div class="testimonials-list" id="testimonials-list">
      <!-- Testimonials will be loaded here -->
    </div>
  </div>
  
  <!-- Modal -->
  <div class="modal-overlay" id="testimonial-modal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modal-title">Novo Depoimento</h2>
        <button class="modal-close" id="close-modal">‚úï</button>
      </div>
      
      <form id="testimonial-form" class="modal-form">
        <input type="hidden" id="testimonial-id" />
        
        <div class="form-group">
          <label>Nome do Cliente *</label>
          <input type="text" id="testimonial-name" required />
        </div>
        
        <div class="form-group">
          <label>Tipo de Evento *</label>
          <input type="text" id="testimonial-event" placeholder="Ex: Anivers√°rio de 30 anos" required />
        </div>
        
        <div class="form-group">
          <label>Avalia√ß√£o *</label>
          <select id="testimonial-rating" required>
            <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê (5 estrelas)</option>
            <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê (4 estrelas)</option>
            <option value="3">‚≠ê‚≠ê‚≠ê (3 estrelas)</option>
            <option value="2">‚≠ê‚≠ê (2 estrelas)</option>
            <option value="1">‚≠ê (1 estrela)</option>
          </select>
        </div>
        
        <div class="form-group">
          <label>Depoimento *</label>
          <textarea id="testimonial-text" rows="4" required></textarea>
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" id="testimonial-active" checked />
            <span>Depoimento ativo</span>
          </label>
        </div>
        
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" id="cancel-btn">
            Cancelar
          </button>
          <button type="submit" class="btn btn-primary">
            Salvar Depoimento
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<style>
  .admin-content {
    padding: var(--spacing-2xl);
    max-width: 1000px;
  }
  
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }
  
  .testimonials-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }
  
  .testimonial-card {
    padding: var(--spacing-lg);
    background: var(--color-bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-lg);
    transition: all var(--transition-fast);
  }
  
  .testimonial-card:hover {
    border-color: var(--color-accent-gold);
  }
  
  .testimonial-card.inactive {
    opacity: 0.6;
  }
  
  .testimonial-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: var(--spacing-md);
  }
  
  .testimonial-header strong {
    display: block;
    color: var(--color-text-primary);
    font-size: 1.125rem;
  }
  
  .testimonial-event {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-top: 4px;
  }
  
  .testimonial-rating {
    font-size: 1.25rem;
  }
  
  .testimonial-text {
    color: var(--color-text-secondary);
    font-style: italic;
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }
  
  .testimonial-actions {
    display: flex;
    gap: var(--spacing-sm);
  }
  
  .btn-sm {
    padding: var(--spacing-xs) var(--spacing-md);
    font-size: 0.875rem;
  }
  
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    padding: var(--spacing-md);
  }
  
  .modal-content {
    background: var(--color-bg-primary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius-lg);
    width: 100%;
    max-width: 600px;
    max-height: 90vh;
    overflow-y: auto;
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .modal-close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 50%;
    font-size: 1.5rem;
  }
  
  .modal-form {
    padding: var(--spacing-xl);
  }
  
  .form-group {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }
  
  .form-group input[type="text"],
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--spacing-sm);
    background: var(--color-bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
    font-family: inherit;
  }
  
  .form-group textarea {
    resize: vertical;
  }
  
  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    cursor: pointer;
  }
  
  .form-actions {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-xl);
  }
  
  .form-actions button {
    flex: 1;
  }
</style>

<script>
  let testimonials: any[] = [];
  let editingId: string | null = null;
  
  async function loadTestimonials() {
    try {
      const response = await fetch('/api/testimonials');
      const data = await response.json();
      testimonials = data.testimonials || [];
      renderTestimonials();
    } catch (error) {
      console.error('Error loading testimonials:', error);
    }
  }
  
  function renderTestimonials() {
    const list = document.getElementById('testimonials-list');
    if (!list) return;
    
    list.innerHTML = testimonials.map(testimonial => `
      <div class="testimonial-card ${testimonial.active ? '' : 'inactive'}">
        <div class="testimonial-header">
          <div>
            <strong>${testimonial.name}</strong>
            <span class="testimonial-event">${testimonial.event}</span>
          </div>
          <div class="testimonial-rating">${'‚≠ê'.repeat(testimonial.rating)}</div>
        </div>
        <p class="testimonial-text">"${testimonial.text}"</p>
        <div class="testimonial-actions">
          <button class="btn btn-secondary btn-sm" data-edit="${testimonial.id}">
            ‚úèÔ∏è Editar
          </button>
          <button class="btn btn-secondary btn-sm" data-toggle="${testimonial.id}">
            ${testimonial.active ? '‚úó Desativar' : '‚úì Ativar'}
          </button>
          <button class="btn btn-secondary btn-sm" data-delete="${testimonial.id}">
            üóëÔ∏è Remover
          </button>
        </div>
      </div>
    `).join('');
    
    // Add event listeners
    document.querySelectorAll('[data-edit]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-edit');
        if (id) editTestimonial(id);
      });
    });
    
    document.querySelectorAll('[data-toggle]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-toggle');
        if (id) toggleTestimonial(id);
      });
    });
    
    document.querySelectorAll('[data-delete]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-delete');
        if (id) deleteTestimonial(id);
      });
    });
  }
  
  function openModal(testimonial?: any) {
    const modal = document.getElementById('testimonial-modal');
    const title = document.getElementById('modal-title');
    const form = document.getElementById('testimonial-form') as HTMLFormElement;
    
    if (modal) modal.style.display = 'flex';
    if (title) title.textContent = testimonial ? 'Editar Depoimento' : 'Novo Depoimento';
    
    if (testimonial) {
      editingId = testimonial.id;
      (document.getElementById('testimonial-id') as HTMLInputElement).value = testimonial.id;
      (document.getElementById('testimonial-name') as HTMLInputElement).value = testimonial.name;
      (document.getElementById('testimonial-event') as HTMLInputElement).value = testimonial.event;
      (document.getElementById('testimonial-rating') as HTMLSelectElement).value = testimonial.rating.toString();
      (document.getElementById('testimonial-text') as HTMLTextAreaElement).value = testimonial.text;
      (document.getElementById('testimonial-active') as HTMLInputElement).checked = testimonial.active;
    } else {
      editingId = null;
      form?.reset();
    }
  }
  
  function closeModal() {
    const modal = document.getElementById('testimonial-modal');
    if (modal) modal.style.display = 'none';
  }
  
  function editTestimonial(id: string) {
    const testimonial = testimonials.find(t => t.id === id);
    if (testimonial) openModal(testimonial);
  }
  
  async function toggleTestimonial(id: string) {
    const testimonial = testimonials.find(t => t.id === id);
    if (!testimonial) return;
    
    try {
      const response = await fetch('/api/testimonials', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ ...testimonial, active: !testimonial.active })
      });
      
      if (response.ok) {
        loadTestimonials();
      }
    } catch (error) {
      console.error('Error toggling testimonial:', error);
      alert('Erro ao atualizar depoimento');
    }
  }
  
  async function deleteTestimonial(id: string) {
    if (!confirm('Deseja realmente remover este depoimento?')) return;
    
    try {
      const response = await fetch('/api/testimonials', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id })
      });
      
      if (response.ok) {
        alert('Depoimento removido com sucesso!');
        loadTestimonials();
      }
    } catch (error) {
      console.error('Error deleting testimonial:', error);
      alert('Erro ao remover depoimento');
    }
  }
  
  document.getElementById('add-testimonial-btn')?.addEventListener('click', () => {
    openModal();
  });
  
  document.getElementById('close-modal')?.addEventListener('click', closeModal);
  document.getElementById('cancel-btn')?.addEventListener('click', closeModal);
  
  document.getElementById('testimonial-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const testimonialData = {
      id: editingId,
      name: (document.getElementById('testimonial-name') as HTMLInputElement).value,
      event: (document.getElementById('testimonial-event') as HTMLInputElement).value,
      rating: parseInt((document.getElementById('testimonial-rating') as HTMLSelectElement).value),
      text: (document.getElementById('testimonial-text') as HTMLTextAreaElement).value,
      active: (document.getElementById('testimonial-active') as HTMLInputElement).checked
    };
    
    try {
      const method = editingId ? 'PUT' : 'POST';
      const response = await fetch('/api/testimonials', {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(testimonialData)
      });
      
      if (response.ok) {
        alert('Depoimento salvo com sucesso!');
        closeModal();
        loadTestimonials();
      }
    } catch (error) {
      console.error('Error saving testimonial:', error);
      alert('Erro ao salvar depoimento');
    }
  });
  
  loadTestimonials();
</script>