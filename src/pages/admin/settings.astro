---
// FILE: src/pages/admin/settings.astro (atualizado com client storage)
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Configurações">
  <div class="admin-content">
    <div class="content-header">
      <div>
        <h1>Configurações Gerais</h1>
        <p>Gerencie textos, contatos e informações do site</p>
      </div>
    </div>
    
    <form id="settings-form" class="settings-form">
      <div class="settings-section">
        <h3>Informações da Marca</h3>
        <div class="form-group">
          <label>Nome da Marca</label>
          <input type="text" name="brandName" required />
        </div>
      </div>
      
      <div class="settings-section">
        <h3>Informações de Contato</h3>
        <div class="form-group">
          <label>WhatsApp</label>
          <input type="text" name="whatsapp" required />
        </div>
        <div class="form-group">
          <label>E-mail</label>
          <input type="email" name="email" required />
        </div>
        <div class="form-group">
          <label>Horário de Atendimento</label>
          <input type="text" name="workingHours" required />
        </div>
      </div>
      
      <div class="settings-section">
        <h3>Redes Sociais</h3>
        <div class="form-group">
          <label>Instagram</label>
          <input type="text" name="instagram" placeholder="@nomedamarca" />
        </div>
        <div class="form-group">
          <label>Facebook</label>
          <input type="text" name="facebook" placeholder="facebook.com/nomedamarca" />
        </div>
      </div>
      
      <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </form>
  </div>
</AdminLayout>

<style>
  .admin-content {
    padding: var(--spacing-2xl);
    max-width: 800px;
  }
  
  .settings-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }
  
  .settings-section {
    padding: var(--spacing-xl);
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-lg);
  }
  
  .settings-section h3 {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }
  
  .form-group input {
    width: 100%;
    padding: var(--spacing-sm);
    background: var(--color-bg-primary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
  }
  
  .form-group input:focus {
    outline: none;
    border-color: var(--color-accent-gold);
  }
</style>

<script>
  const STORAGE_KEY = 'admin_settings';
  
  function getSettings() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      if (stored) {
        return JSON.parse(stored);
      }
    } catch (error) {
      console.error('Error loading settings:', error);
    }
    
    return {
      brandName: 'NOME_DA_MARCA',
      whatsapp: '(11) 99999-9999',
      email: 'contato@nomedamarca.com.br',
      workingHours: 'Seg-Sex: 9h às 18h | Sáb: 9h às 14h',
      instagram: '@nomedamarca',
      facebook: 'facebook.com/nomedamarca'
    };
  }
  
  function saveSettings(settings: any) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(settings));
      return true;
    } catch (error) {
      console.error('Error saving settings:', error);
      return false;
    }
  }
  
  function loadForm() {
    const settings = getSettings();
    const form = document.getElementById('settings-form') as HTMLFormElement;
    
    if (form) {
      Object.keys(settings).forEach(key => {
        const input = form.elements.namedItem(key) as HTMLInputElement;
        if (input) {
          input.value = settings[key];
        }
      });
    }
  }
  
  loadForm();
  
  const form = document.getElementById('settings-form');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const settings = Object.fromEntries(formData.entries());
    
    if (saveSettings(settings)) {
      alert('Configurações salvas com sucesso!');
      
      // Recarrega a página para aplicar mudanças
      setTimeout(() => {
        window.location.reload();
      }, 1000);
    } else {
      alert('Erro ao salvar configurações');
    }
  });
</script>