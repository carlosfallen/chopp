---
// FILE: src/pages/admin/settings.astro
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Configurações">
  <div class="admin-content">
    <div class="content-header">
      <div>
        <h1>Configurações Gerais</h1>
        <p>Gerencie textos, contatos e informações do site</p>
      </div>
    </div>
    
    <form id="settings-form" class="settings-form">
      <div class="settings-section">
        <h3>Informações da Marca</h3>
        <div class="form-group">
          <label>Nome da Marca</label>
          <input type="text" name="brandName" required />
        </div>
      </div>
      
      <div class="settings-section">
        <h3>Imagem Hero (Página Inicial)</h3>
        <div class="form-group">
          <label>URL da Imagem Hero</label>
          <input type="url" name="heroImage" placeholder="https://..." />
          <small>Cole a URL da imagem que você fez upload</small>
        </div>
        <div class="image-preview" id="hero-preview"></div>
      </div>
      
      <div class="settings-section">
        <h3>Informações de Contato</h3>
        <div class="form-group">
          <label>WhatsApp (com DDD)</label>
          <input type="text" name="whatsapp" placeholder="(11) 99999-9999" required />
        </div>
        <div class="form-group">
          <label>E-mail</label>
          <input type="email" name="email" required />
        </div>
        <div class="form-group">
          <label>Horário de Atendimento</label>
          <input type="text" name="workingHours" required />
        </div>
      </div>
      
      <div class="settings-section">
        <h3>Redes Sociais</h3>
        <div class="form-group">
          <label>Instagram</label>
          <input type="text" name="instagram" placeholder="@nomedamarca" />
        </div>
        <div class="form-group">
          <label>Facebook</label>
          <input type="text" name="facebook" placeholder="facebook.com/nomedamarca" />
        </div>
      </div>
      
      <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </form>
  </div>
</AdminLayout>

<style>
  .admin-content {
    padding: var(--spacing-2xl);
    max-width: 800px;
  }
  
  .settings-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }
  
  .settings-section {
    padding: var(--spacing-xl);
    background: var(--color-bg-secondary);
    border-radius: var(--border-radius-lg);
  }
  
  .settings-section h3 {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }
  
  .form-group input {
    width: 100%;
    padding: var(--spacing-sm);
    background: var(--color-bg-primary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
  }
  
  .form-group small {
    display: block;
    margin-top: var(--spacing-xs);
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .image-preview {
    margin-top: var(--spacing-md);
    border-radius: var(--border-radius);
    overflow: hidden;
  }
  
  .image-preview img {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
  }
</style>

<script>
  async function loadSettings() {
    try {
      const response = await fetch('/api/settings');
      if (!response.ok) throw new Error('Failed to load settings');
      
      const settings = await response.json();
      const form = document.getElementById('settings-form') as HTMLFormElement;
      
      if (form) {
        Object.keys(settings).forEach(key => {
          const input = form.elements.namedItem(key) as HTMLInputElement;
          if (input && settings[key]) {
            input.value = settings[key];
          }
        });
        
        if (settings.heroImage) {
          updatePreview(settings.heroImage);
        }
      }
    } catch (error) {
      console.error('Error loading settings:', error);
    }
  }
  
  function updatePreview(url: string) {
    const preview = document.getElementById('hero-preview');
    if (preview && url) {
      preview.innerHTML = `<img src="${url}" alt="Hero preview" />`;
    }
  }
  
  const form = document.getElementById('settings-form');
  const heroInput = form?.elements.namedItem('heroImage') as HTMLInputElement;
  
  heroInput?.addEventListener('input', (e) => {
    const url = (e.target as HTMLInputElement).value;
    if (url) updatePreview(url);
  });
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const settings = Object.fromEntries(formData.entries());
    
    try {
      const response = await fetch('/api/settings', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(settings)
      });
      
      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.details || 'Failed to save');
      }
      
      alert('Configurações salvas com sucesso!');
      setTimeout(() => window.location.reload(), 1000);
    } catch (error) {
      console.error('Error saving settings:', error);
      alert(`Erro ao salvar: ${error instanceof Error ? error.message : 'Unknown error'}`);
    }
  });
  
  loadSettings();
</script>