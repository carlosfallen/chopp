import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Gerenciar Marcas">
  <div class="admin-content">
    <div class="content-header">
      <div>
        <h1>Marcas Parceiras</h1>
        <p>Gerencie os logos das marcas de chopp</p>
      </div>
      <button class="btn btn-primary" id="add-brand-btn">
        <span>+</span>
        <span>Nova Marca</span>
      </button>
    </div>
    
    <div class="brands-grid" id="brands-grid">
      <!-- Brands will be loaded here -->
    </div>
  </div>
  
  <!-- Modal -->
  <div class="modal-overlay" id="brand-modal" style="display: none;">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modal-title">Nova Marca</h2>
        <button class="modal-close" id="close-modal">‚úï</button>
      </div>
      
      <form id="brand-form" class="modal-form">
        <input type="hidden" id="brand-id" />
        
        <div class="form-group">
          <label>Nome da Marca *</label>
          <input type="text" id="brand-name" required />
        </div>
        
        <div class="form-group">
          <label>URL do Logo</label>
          <input type="url" id="brand-logo" placeholder="https://..." />
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" id="brand-active" checked />
            <span>Marca ativa</span>
          </label>
        </div>
        
        <div class="form-actions">
          <button type="button" class="btn btn-secondary" id="cancel-btn">
            Cancelar
          </button>
          <button type="submit" class="btn btn-primary">
            Salvar Marca
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<style>
  .admin-content {
    padding: var(--spacing-2xl);
  }
  
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
  }
  
  .brands-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--spacing-lg);
  }
  
  .brand-card {
    padding: var(--spacing-lg);
    background: var(--color-bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius-lg);
    text-align: center;
    transition: all var(--transition-fast);
  }
  
  .brand-card:hover {
    border-color: var(--color-accent-gold);
    transform: translateY(-4px);
  }
  
  .brand-logo-preview {
    width: 100px;
    height: 100px;
    margin: 0 auto var(--spacing-md);
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    overflow: hidden;
  }
  
  .brand-logo-preview img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  
  .brand-info h4 {
    margin-bottom: var(--spacing-sm);
  }
  
  .brand-actions {
    display: flex;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-sm);
  }
  
  .btn-sm {
    flex: 1;
    padding: var(--spacing-xs) var(--spacing-sm);
    font-size: 0.875rem;
  }
  
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
  
  .modal-content {
    background: var(--color-bg-primary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius-lg);
    width: 100%;
    max-width: 500px;
    max-height: 90vh;
    overflow-y: auto;
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .modal-close {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 50%;
    font-size: 1.5rem;
  }
  
  .modal-form {
    padding: var(--spacing-xl);
  }
  
  .form-group {
    margin-bottom: var(--spacing-md);
  }
  
  .form-group label {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
  }
  
  .form-group input[type="text"],
  .form-group input[type="url"] {
    width: 100%;
    padding: var(--spacing-sm);
    background: var(--color-bg-secondary);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
  }
  
  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    cursor: pointer;
  }
  
  .form-actions {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-xl);
  }
</style>

<script>
  let brands: any[] = [];
  let editingId: string | null = null;
  
  async function loadBrands() {
    try {
      const response = await fetch('/api/brands');
      const data = await response.json();
      brands = data.brands || [];
      renderBrands();
    } catch (error) {
      console.error('Error loading brands:', error);
    }
  }
  
  function renderBrands() {
    const grid = document.getElementById('brands-grid');
    if (!grid) return;
    
    grid.innerHTML = brands.map(brand => `
      <div class="brand-card">
        <div class="brand-logo-preview">
          ${brand.logoUrl ? `<img src="${brand.logoUrl}" alt="${brand.name}" />` : 'üç∫'}
        </div>
        <div class="brand-info">
          <h4>${brand.name}</h4>
          <span style="font-size: 0.75rem; color: var(--color-text-muted);">
            ${brand.active ? '‚úì Ativo' : '‚úó Inativo'}
          </span>
          <div class="brand-actions">
            <button class="btn btn-secondary btn-sm" data-edit="${brand.id}">
              Editar
            </button>
            <button class="btn btn-secondary btn-sm" data-delete="${brand.id}">
              Remover
            </button>
          </div>
        </div>
      </div>
    `).join('');
    
    // Add event listeners
    document.querySelectorAll('[data-edit]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-edit');
        if (id) editBrand(id);
      });
    });
    
    document.querySelectorAll('[data-delete]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-delete');
        if (id) deleteBrand(id);
      });
    });
  }
  
  function openModal(brand?: any) {
    const modal = document.getElementById('brand-modal');
    const title = document.getElementById('modal-title');
    const form = document.getElementById('brand-form') as HTMLFormElement;
    
    if (modal) modal.style.display = 'flex';
    if (title) title.textContent = brand ? 'Editar Marca' : 'Nova Marca';
    
    if (brand) {
      editingId = brand.id;
      (document.getElementById('brand-id') as HTMLInputElement).value = brand.id;
      (document.getElementById('brand-name') as HTMLInputElement).value = brand.name;
      (document.getElementById('brand-logo') as HTMLInputElement).value = brand.logoUrl || '';
      (document.getElementById('brand-active') as HTMLInputElement).checked = brand.active;
    } else {
      editingId = null;
      form?.reset();
    }
  }
  
  function closeModal() {
    const modal = document.getElementById('brand-modal');
    if (modal) modal.style.display = 'none';
  }
  
  function editBrand(id: string) {
    const brand = brands.find(b => b.id === id);
    if (brand) openModal(brand);
  }
  
  async function deleteBrand(id: string) {
    if (!confirm('Deseja realmente remover esta marca?')) return;
    
    try {
      const response = await fetch('/api/brands', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id })
      });
      
      if (response.ok) {
        alert('Marca removida com sucesso!');
        loadBrands();
      }
    } catch (error) {
      console.error('Error deleting brand:', error);
      alert('Erro ao remover marca');
    }
  }
  
  document.getElementById('add-brand-btn')?.addEventListener('click', () => {
    openModal();
  });
  
  document.getElementById('close-modal')?.addEventListener('click', closeModal);
  document.getElementById('cancel-btn')?.addEventListener('click', closeModal);
  
  document.getElementById('brand-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const brandData = {
      id: editingId,
      name: (document.getElementById('brand-name') as HTMLInputElement).value,
      logoUrl: (document.getElementById('brand-logo') as HTMLInputElement).value,
      active: (document.getElementById('brand-active') as HTMLInputElement).checked,
      order: editingId ? brands.find(b => b.id === editingId)?.order : brands.length + 1
    };
    
    try {
      const method = editingId ? 'PUT' : 'POST';
      const response = await fetch('/api/brands', {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(brandData)
      });
      
      if (response.ok) {
        alert('Marca salva com sucesso!');
        closeModal();
        loadBrands();
      }
    } catch (error) {
      console.error('Error saving brand:', error);
      alert('Erro ao salvar marca');
    }
  });
  
  loadBrands();
</script>