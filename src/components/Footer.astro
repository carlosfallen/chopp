---
// FILE: src/components/Footer.astro (atualizado)
import { getSettings } from '../lib/content';

const settings = await getSettings(Astro);
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <h3 class="footer-logo">{settings.brandName}</h3>
        <p>Chopp de qualidade para eventos inesquecíveis</p>
        <div class="footer-social">
          {settings.instagram && (
            <a href={`https://instagram.com/${settings.instagram.replace('@', '')}`} target="_blank" aria-label="Instagram">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
