---
// Steps otimizado - Intersection Observer + CSS puro
const steps = [
  {
    icon: 'üìç',
    title: 'Informe seu endere√ßo',
    description: 'Digite seu CEP e veja se atendemos sua regi√£o'
  },
  {
    icon: 'üç∫',
    title: 'Escolha o chopp',
    description: 'Selecione estilo, quantidade e data da festa'
  },
  {
    icon: 'üöö',
    title: 'Chopeira e instala√ß√£o',
    description: 'Levamos a chopeira e instalamos no local'
  },
  {
    icon: 'üéâ',
    title: 'Brinde com convidados',
    description: 'Aproveite chopp gelado de bar na sua casa'
  }
];
---

<div class="steps-grid" id="steps-grid">
  {steps.map((step, index) => (
    <div class="step-card" style={`--delay: ${index * 0.15}s`}>
      <div class="step-number">{index + 1}</div>
      <div class="step-icon">{step.icon}</div>
      <h3 class="step-title">{step.title}</h3>
      <p class="step-description">{step.description}</p>
    </div>
  ))}
</div>

<style>
  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .step-card {
    position: relative;
    padding: 2.5rem 2rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
    transform: translateY(40px);
  }

  /* Anima√ß√£o quando vis√≠vel */
  .step-card.visible {
    opacity: 1;
    transform: translateY(0);
    animation: slideInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) var(--delay) forwards;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .step-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: var(--color-accent-gold);
    box-shadow: 0 12px 40px rgba(212, 175, 55, 0.2);
  }

  .step-number {
    position: absolute;
    top: 1.25rem;
    right: 1.25rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-accent-gold), var(--color-accent-amber));
    color: var(--color-bg-primary);
    font-weight: 800;
    font-size: 1.125rem;
    border-radius: 50%;
    opacity: 0;
    transform: scale(0);
    animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55) calc(var(--delay) + 0.2s) forwards;
  }

  @keyframes popIn {
    from {
      opacity: 0;
      transform: scale(0) rotate(45deg);
    }
    to {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  .step-icon {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    opacity: 0;
    transform: scale(0) rotate(45deg);
    animation: iconPop 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) calc(var(--delay) + 0.4s) forwards;
  }

  @keyframes iconPop {
    from {
      opacity: 0;
      transform: scale(0) rotate(45deg);
    }
    to {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }
  }

  .step-title {
    font-size: 1.375rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .step-description {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .steps-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .step-card {
      padding: 2rem 1.5rem;
    }

    .step-icon {
      font-size: 3rem;
    }

    .step-title {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .step-card {
      padding: 1.75rem 1.25rem;
    }

    .step-number {
      width: 36px;
      height: 36px;
      font-size: 1rem;
      top: 1rem;
      right: 1rem;
    }

    .step-icon {
      font-size: 2.5rem;
      margin-bottom: 1.25rem;
    }

    .step-title {
      font-size: 1.125rem;
    }

    .step-description {
      font-size: 0.875rem;
    }
  }

  /* Telas < 360px */
  @media (max-width: 359px) {
    .steps-grid {
      gap: 1.25rem;
      margin-top: 2rem;
    }

    .step-card {
      padding: 1.5rem 1rem;
      border-radius: 1.25rem;
    }

    .step-number {
      width: 32px;
      height: 32px;
      font-size: 0.9375rem;
    }

    .step-icon {
      font-size: 2.25rem;
      margin-bottom: 1rem;
    }

    .step-title {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }

    .step-description {
      font-size: 0.8125rem;
    }
  }

  /* Acessibilidade */
  @media (prefers-reduced-motion: reduce) {
    .step-card,
    .step-number,
    .step-icon {
      animation: none !important;
      opacity: 1 !important;
      transform: none !important;
    }

    .step-card:hover {
      transform: none;
    }
  }
</style>

<script>
  // Intersection Observer para trigger de anima√ß√£o
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const cards = entry.target.querySelectorAll('.step-card');
          cards.forEach((card) => {
            card.classList.add('visible');
          });
          observer.unobserve(entry.target);
        }
      });
    },
    {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    }
  );

  const grid = document.getElementById('steps-grid');
  if (grid) {
    observer.observe(grid);
  }
</script>
