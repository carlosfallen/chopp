---
import AnimatedHero from './solid/AnimatedHero';
---

<section class="hero-section" id="hero">
  <div class="hero-bg"></div>
  <AnimatedHero client:load />
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding-top: 80px;
  }
  
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      linear-gradient(135deg,
        rgba(10, 10, 10, 0.95) 0%,
        rgba(30, 20, 10, 0.9) 50%,
        rgba(10, 10, 10, 0.95) 100%
      );
    background-attachment: fixed;
  }
  
  @media (max-width: 768px) {
    .hero-bg {
      background-attachment: scroll;
    }
  }
</style>
